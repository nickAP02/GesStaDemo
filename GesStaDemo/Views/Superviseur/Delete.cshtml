@model GesStaDemo.Models.Entities.Superviseur

@{
    ViewBag.Title = "Suppression du superviseur";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}


<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nom d'utilisateur")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Utilisateur.Login)
        </dd>

        <dt>
            @Html.DisplayName("Nom")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomSup)
        </dd>

        <dt>
            @Html.DisplayName("Prénom")
        </dt>

