@model GesStaDemo.Models.Entities.Remuneration

@{
    var db = new GesStaDbContext();
    ViewBag.IdSta = new SelectList(db.Stagiaires, "IdSta", "NomSta");
    ViewBag.Title = "Modification de la rémunération";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CodRem)

    <div class="form-group">
        @Html.Label("Règlement mensuel", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.RegleMens, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RegleMens, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Date de remise", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateRemiz, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateRemiz, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Stagiaire", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IdSta", null, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            @Html.ValidationMessageFor(model => model.IdSta, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enregistrer" class="btn btn-info" />
            <a href="" type="reset" value="" class="btn btn-default"><i class="fa fa-redo"></i></a>
            <a href="@Url.Action("Index","Remuneration")" type="submit" value="" class="btn btn-default"><i class="fa fa-arrow-left"></i></a>
        </div>
    </div>
</div>
}
