                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <canvas id="Chart1" width="300" height="250"></canvas>
                    <canvas id="Chart2" width="400" height="250"></canvas>
                </div>
            </div>
          
            
        </section>
    </div>
    
</div>

<script>
    var ctx1 = document.getElementById('Chart1').getContext('2d');
    var Chart1 = new Chart(ctx1, {
        type: 'doughnut',
        data: {
            labels: ['Division', 'Direction', 'Section'],
            datasets: [{
                label: 'Totaux',
                data: [@ViewBag.Division,@ViewBag.Direction, @ViewBag.Section],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {

            responsive: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            legend: {
                display: true  // <- the important part
            },
            events: [],


        }
    });
    var ctx2 = document.getElementById('chart2').getContext('2d');
    const labels = @ViewBag.Section;
     var Chart2 = new Chart(ctx2, {
        type: 'line',
         data: {
             labels: labels,
            datasets: [{
                label: 'Stagiaires par section',
                data: [@ViewBag.Formation],
                borderColor: 
                    'rgba(255, 99, 132, 1)',
                tension:0.1
            }]
        },
    });
</script>
