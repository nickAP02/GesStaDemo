@model IEnumerable<GesStaDemo.Models.Entities.Demande>

@{
    ViewBag.Title = "Accepter";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<style>
    .main {
        position: static;
        display: grid;
        margin-right: -120px;
        border-radius: 45px 45px;
    }
</style>
<div class="main">
    <h2>Demandes acceptées</h2>
    <div>
        <a href="@Url.Action("Acceptees","Admin")" style="text-decoration:none;">Imprimer<i class="fa fa-print"></i></a>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Offre")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexe)
            </th>
            <th>
                @Html.DisplayName("Date de naissance")
            </th>
            <th>
                @Html.DisplayName("Nationalité")
            </th>
            <th>
                @Html.DisplayName("Téléphone")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayName("CV")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TypeDeStage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sexe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateNaissance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nationalite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <span id="popuptext1" style="display:none;">Voir CV</span>
            <a href="@Url.Action("Voir","Admin",new { id = item.IdDem })" class="btn btn-primary" onmouseover="myFunction()">
                <i class="fa fa-file-pdf"></i>
            </a>
        </td>
        <td>
            <a href="@Url.Action("Create","Stagiaire")" class="btn btn-primary"><i class="fa fa-plus-square"></i></a>
        </td>
    </tr>
        }

    </table>
</div>
