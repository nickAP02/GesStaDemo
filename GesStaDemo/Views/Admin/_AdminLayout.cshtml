        }
        #check:checked ~ label #bars {
            left:250px;
            opacity:0;
            pointer-events:none;
        }#check:checked ~ label #cancel {
            left:195px;
        }
        label #bars, label #cancel {
            position:fixed;
            cursor: pointer;
            background-color: midnightblue;
            border-radius: 3px;
        }

        label #bars {
            left: 0;
            top: 50px;
            font-size: 40px;
            color: whitesmoke;
            padding: 6px 12px;
            transition: all .5s ease;
        }
        label #cancel {
            padding: 4px 9px;
            color: whitesmoke;
            z-index: 1111;
            left: -195px;
            top: 30px;
            background-color: midnightblue;
            font-size: 40px;
            transition: all .5s ease;
        }
        .sidebar {
