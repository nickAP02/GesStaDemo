@model GesStaDemo.Models.Entities.Direction

@{
    ViewBag.Title = "Modification d'une direction";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>@Model.CodDir</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CodDir)

        <div class="form-group">
            @Html.Label("Libellé de la direction", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LibDir, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LibDir, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Action", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ActDir, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ActDir, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                <a href="" type="reset" value="Annuler" class="btn btn-default"><i class="fa fa-redo"></i></a>
                <a href="@Url.Action("Index","Direction")" type="submit" value="Ajouter" class="btn btn-default"><i class="fa fa-arrow-left"></i></a>
            </div>
        </div>
    </div>
}
