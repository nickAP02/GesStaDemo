@model IEnumerable<GesStaDemo.Models.Entities.Provenance>

@{
    ViewBag.Title = "Consultation des provenances";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Liste des provenances</h2>
<div>
    <a href="@Url.Action("Imprimer","Provenance")" style="text-decoration:none;">Imprimer<i class="fa fa-print"></i></a>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Libellé de la provenance")
        </th>
        <th>
            @Html.DisplayName("Adresse mail")
        </th>
        <th>
            @Html.DisplayName("Ville")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LibProv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdrProv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VilleProv)
        </td>
        <td>
            <a href="@Url.Action("Edit","Provenance", new { id = item.IdProv } )" class="btn btn-primary"><i class="fa fa-pen-alt"></i></a>
            <a href="@Url.Action("Details","Provenance", new { id = item.IdProv })" class="btn btn-success"><i class="fa fa-bookmark"></i></a>
            <a href="@Url.Action("Delete","Provenance", new { id = item.IdProv })" class="btn btn-danger"><i class="fa fa-trash"></i></a>
        </td>
    </tr>
}

</table>
