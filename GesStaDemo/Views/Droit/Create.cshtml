@model GesStaDemo.Models.Entities.Droit

@{
    ViewBag.Title = "Ajout d'un droit";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Ajouter un droit</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Utilisateur", htmlAttributes: new { @class = "control-label col-md-2" , style="padding-left:30px;"})
            <div class="col-md-10">
                @Html.DropDownList("UtilId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UtilId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Profil", htmlAttributes: new { @class = "control-label col-md-2", style = "padding-left:30px;" })
            <div class="col-md-10">
                @Html.DropDownList("ProfilId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProfilId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ajouter" class="btn btn-primary"/>
                <a href="" type="reset" value="" class="btn btn-default"><i class="fa fa-redo"></i></a>

            </div>
        </div>
    </div>
}
