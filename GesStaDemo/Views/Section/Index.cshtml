@model IEnumerable<GesStaDemo.Models.Entities.Section>

@{
    ViewBag.Title = "Consultation des sections";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Liste des sections</h2>
<div>
    <a href="@Url.Action("Imprimer","Section")" style="text-decoration:none;">Imprimer<i class="fa fa-print"></i></a>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Libellé de la division")
        </th>
        <th>
            @Html.DisplayName("Libellé de la section")
        </th>
        <th>
            @Html.DisplayName("Action de la section")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Division.LibDiv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LibSec)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActSec)
        </td>
        <td>
            <a href="@Url.Action("Edit","Section", new { id = item.CodSec})" class="btn btn-primary"><i class="fa fa-pen-alt"></i></a>
            <a href="@Url.Action("Details","Section", new { id =item.CodSec})" class="btn btn-success"><i class="fa fa-bookmark"></i></a>
            <a href="@Url.Action("Delete","Section", new { id = item.CodSec})" class="btn btn-danger"><i class="fa fa-trash"></i></a>
        </td>
    </tr>
}

</table>
