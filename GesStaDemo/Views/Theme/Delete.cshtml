@model GesStaDemo.Models.Entities.Theme

@{
    ViewBag.Title = "Suppression du thème";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}


<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Maître de stage")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaitreDeStage.NomMS)
        </dd>

        <dt>
            @Html.DisplayName("Stagiaire")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stagiaire.NomSta)
        </dd>

        <dt>
            @Html.DisplayName("Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateTheme)
        </dd>

        <dt>
            @Html.DisplayName("Libellé du thème")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LibTheme)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Objectifs)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Objectifs)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    <a href="" type="reset" value="" class="btn btn-default"><i class="fa fa-redo"></i></a>
    <a href="@Url.Action("Index","Theme")" type="submit" value="" class="btn btn-default"><i class="fa fa-arrow-left"></i></a>
</div>
    }
</div>
