@model IEnumerable<GesStaDemo.Models.Entities.Theme>

@{
    ViewBag.Title = "Consultation des thèmes";
    Layout = "~/Views/Login/_MSLayout.cshtml";
}

<h2>Liste des thèmes</h2>
<div>
    <a href="@Url.Action("Imprimer","Theme")" style="text-decoration:none;">Imprimer<i class="fa fa-print"></i></a>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Maître de stage")
        </th>
        <th>
            @Html.DisplayName("Stagiaire")
        </th>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th>
            @Html.DisplayName("Libellé du thème")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Objectifs)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaitreDeStage.NomMS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stagiaire.NomSta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTheme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LibTheme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Objectifs)
        </td>
        <td>
            <a href="@Url.Action("Edit","Superviseur",new { id = item.IdThe })" class="btn btn-primary"><i class="fa fa-pen-alt"></i></a>
            <a href="@Url.Action("Details","Superviseur",new { id = item.IdThe })" class="btn btn-success"><i class="fa fa-bookmark"></i></a>
            <a href="@Url.Action("Delete","Superviseur", new { id = item.IdThe })" class="btn btn-danger"><i class="fa fa-trash"></i></a>
        </td>
    </tr>
}

</table>
